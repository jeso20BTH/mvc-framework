{% include 'views/header.html.twig' %}

<div class="flex row end sub-nav">
    <a class="{{ (game== 'twentyone') ? "active" : '' }}" href="{{ path('high_score', {'game': 'twentyone'}) }}">21</a>
    <a class="{{ (game== 'yatzy') ? "active" : '' }}" href="{{ path('high_score', {'game': 'yatzy'}) }}">Yatzy</a>
</div>

<div class="flex row start">
    <a class="button small-button float-left left-margin top-margin2" href="{{ path(game) }}">Play {{ (game == "yatzy") ? game|capitalize : '21' }}</a>
</div>

<h1 class="no-top-margin">{{ header|capitalize }}</h1>
<div class="flex row center">
    <table>
        <tr>
            <th>Player</th>
            <th>Score</th>
        </tr>
        {% for score in scores %}
            <tr>
                <td>{{ score.name }}</td>
                <td>{{ score.score }} {{ (game == 'yatzy') ? 'p' : 'â‚¿' }}</td>
            </tr>
        {% endfor %}
    </table>
</div>



